<ul style="list-style-type:none;" class="post-list">
    {{#each posts as |post|}}
    <li>
        <div class="card" style="width: 500px;; margin-top:10px">
                {{!-- <p>Created by {{post.fullname}} on {{format_date fullname.date_created}}</p> --}}
            <header style="padding: 10px">{{post.name}}</header>

            <img src="{{post.photo}}" class="card-img-top" alt="...">
            <div class="card-body">
                <p class="card-text">{{post.description}}
                   <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">delete</button> 
                </p>
            </div>
            <div class="">
            <label for="" style="font-size: 10px"></label>
            <input style="height: 30px; width: 80%" placeholder="Type a Comment..." name=""></input>
            <button class="btn btn-sm btn-danger delete-comment" data-id="{{comment.id}}">delete</button>
          </div>
            {{#each post.Comments as |comment|}}
                <div style="padding:10px; border: red; background:#dedede">
                    <p > {{comment.description}}</p>
                </div>
            {{/each}}

        </div>

    </li>
{{/each}}
</ul>

<script src="/js/newpost.js"></script>